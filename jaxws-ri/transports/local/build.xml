<project name="JAXWS-RI local transport" default="compile" basedir=".">

  <property file="../../project.properties"/>

  <target name="compile">
    <mkdir dir="build/classes"/>
    <javac srcdir="src"
        destdir="${basedir}/build/classes"
        debug="${compile.debug}"
        deprecation="${compile.deprecation}"
        optimize="${compile.optimize}"
        source="1.5">
      <classpath>
        <fileset dir="../../lib" includes="*.jar" />
        <pathelement path="../../rt/build/classes" />
      </classpath>
    </javac>
  </target>
  
  <target name="jar" depends="compile">
    <jar file="build/jaxws-local-transport.jar">
      <manifest>
        <attribute name="Build-Id" value="${build.id}" />
        <attribute name="Build-Version" value="${build.version}" />
        <attribute name="Major-Version" value="${release.impl.version}" />
      </manifest>
      <fileset dir="build/classes" />
      <fileset dir="src" includes="META-INF/**/*" />
    </jar>
  </target>
  
  <target name="src-zip">
    <zip file="build/jaxws-local-transport-src.zip">
      <fileset dir="src" />
    </zip>
  </target>

  <target name="dist" depends="jar, src-zip" />
  
  <target name="clean">
    <delete dir="build"/>
  </target>
</project> 
